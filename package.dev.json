{
  "name": "codestate-ide",
  "displayName": "CodeState",
  "description": "Development session management extension for VS Code and compatible IDEs that saves and restores your coding environment, including open files, terminal commands, scripts, and project state",
  "version": "1.2.0",
  "publisher": "karthikchinasani",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/codestate-cs/code-state-ide.git"
  },
  "homepage": "https://github.com/codestate-cs/code-state-ide",
  "bugs": {
    "url": "https://github.com/codestate-cs/code-state-ide/issues"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "session",
    "context",
    "productivity",
    "development",
    "workspace",
    "save",
    "resume",
    "git",
    "terminal"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-state-ide.openFullPage",
        "title": "Open CodeState",
        "category": "CodeState",
        "icon": "resources/icon.svg"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codestate-ide",
          "title": "CodeState IDE",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "codestate-ide": [
        {
          "id": "codestate-ide-view",
          "name": "CodeState IDE",
          "when": "workspaceFolderCount > 0",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "code-state-ide.openFullPage",
          "group": "navigation@1",
          "when": "explorerResourceIsFolder"
        }
      ],
      "editor/context": [
        {
          "command": "code-state-ide.openFullPage",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "setup-dev": "./setup-dev.sh",
    "dev": "npm run setup-dev && npm run watch",
    "switch:dev": "./switch-config.sh dev",
    "switch:prod": "./switch-config.sh prod",
    "postinstall": "./setup-dev.sh"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@codestate/core": "file:../code-state-library/packages/core",
    "@codestate/ui": "file:../codestate-ui"
  }
}